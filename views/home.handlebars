<div class="proj-container d-flex flex-column justify-content-center rounded">
    <div class="heading-wrap w-50 text-center mt-4 mb-3 mx-auto border-bottom">
        <h1 class="pb-4 text-light">Project Catalog</h1>
    </div>
    
    <div id="proj-coll" class="wrap-proj-sec d-flex flex-wrap m-auto pb-5">
        <div class="mx-5 cst-wrap d-flex m-auto flex-wrap"> 
            {{#each projects as |project|}}
            <div class="card cst-flex-basis mx-2 my-2">
                <img src={{project.image}} class="card-img-top" alt="..." >
                <div class="card-body">
                    <h5 class="card-title">{{project.title}}</h5>
                    <p class="card-text">{{project.description}}</p>
                    
                </div>
                <div class="wrap-btn d-flex justify-content-between p-2">
                    <a href={{project.link}} target="_blank" class="btn btn-primary">Test Live</a>
                </div>
            </div>
            {{/each}}

        </div>
        
    </div>

</div>

